@import './static/css/index.wxss';

.qrcode-area {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    text-align: center;
    background-color: rgba(0, 0, 0, 0.5);
}

.order-no {
    padding-top: 50rpx;

}

.rows {
    background: #FA5151;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    position: absolute;
    top: -3rpx;
    right: 69rpx;
}

.qrcode-dlg {
    background-color: #fff;
    width: 590rpx;
    border-radius: 8px;
    text-align: center;
    margin: 0 auto;
    margin-top: 151rpx;
}

.qrcode {
    width: 280rpx;
    height: 280rpx;
    margin-top: 28rpx;
    margin-bottom: 45rpx;
}

.qrcode-no {
    font-size: 36rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    color: #666;
}

.qrcode-no .num {
    font-size: 48rpx;
    font-weight: normal;
    color: #282828;
    display: inline-block;
}

.qrcode-tip {
    font-size: 24rpx;
    line-height: 30rpx;
    color: #999;
    margin-top: 44rpx;
    margin-bottom: 28rpx;
}

.qrcode-btn {
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    color: #ff538b;
    padding: 29rpx 0;
}

.qrcode-close {
    margin-top: 85rpx;
}

.qrcode-close image {
    width: 35rpx;
    height: 35rpx;
}

.empty {
    margin: 0 auto;
    text-align: center;
    font-size: 26rpx;
    color: #999999;
    padding-top: 38rpx;
    padding-bottom: 38rpx;
    box-sizing: border-box;
}

.empty view:first-child {}

.empty view:last-child {
    background-image: linear-gradient(-225deg, #5EF56C 0%, #07C2B7 100%);
    border-radius: 22.5rpx;
    width: 155rpx;
    height: 45rpx;
    font-size: 26rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 45rpx;
    margin: 0 auto;
    margin-top: 24rpx;
}

.empty image {
    width: 213rpx;
    height: 200rpx;
}