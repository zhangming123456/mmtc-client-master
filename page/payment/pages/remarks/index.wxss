page {
    background-color: #f4f4f4;
}

.t-select {
    background-color: #fff;
    padding: 0 30rpx;
    padding-top: 30rpx;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.t-selectTcr {
    font-size: 32rpx;
    color: #333;
}

.t-selectTeacher {
    margin-top: 30rpx;
}

.t-all {
    background-color: #f5f5f5;
    border-radius: 4rpx;
    width: 150rpx;
    padding: 16rpx 0;
    color: #666;
    font-size: 28rpx;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    display: inline-block;
}

.t-active {
    border-radius: 4rpx;
    background-color: #fff5f8;
    border: solid 1px #ff538b;
    width: 150rpx;
    padding: 16rpx 0;
    color: #ff538b;
    font-size: 28rpx;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    display: inline-block;
    box-sizing: border-box;
}

.t-selectDemo {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    border-top: 1px solid #eee;
}

.t-selectDemo text {
    font-size: 32rpx;
    color: #333;
}

.t-choice image {
    width: 15rpx;
    height: 25rpx;
}

.t-choice text {
    font-size: 28rpx;
    color: #999;
    margin-right: 20rpx;
}

.t-comment {
    height: 300rpx;
    background-color: #fff;
    border: solid 1px #e5e5e5;
    margin-top: 20rpx;
    padding: 30rpx;
    box-sizing: border-box;
    position: relative;
}

.t-comment textarea {
    height: 100%;
    width: 100%;
    font-size: 30rpx;
    color: #333;
}

.t-comment view {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    font-size: 24rpx;
    color: #999;
}

.t-bottom {
    width: 100%;
    height: 100rpx;
    background-color: #16d6c3;
    position: fixed;
    bottom: 0;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}

.pop-example--top {
    width: 100vw;
    padding: 15px;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    text-align: center;
}

.pop-example__container {
    overflow: hidden;
    background: #fff;
}

.pop-example__container--bottom {
    width: 100vw;
}

.pop-example__container--left,
.pop-example__container--right {
    height: 100vh;
}

.zan-btns {
    background-color: #fff;
    height: 550rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.zan-btns2 {
    height: 430rpx;
    overflow: hidden;
}

.t-selectTitle {
    height: 100rpx;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: #333;
}

.t-selectTitle label {
    line-height: 100rpx;
}

.t-selectTitle button {
    border: 1rpx solid transparent;
    padding-left: 0;
    padding-right: 0;
    margin: 0;
}

.t-selectItem {
    padding: 25rpx 30rpx;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
}

.t-items {
    font-size: 32rpx;
    color: #333;
    display: flex;
    align-items: center;
}

.t-items image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 22rpx;
}

.t-price {
    font-size: 32rpx;
    color: #333;
}