page {}


.cover .wx-swiper-dot {
  width: 40rpx;
  display: inline-flex;
  height: 10rpx;
  margin-left: 20rpx;
  justify-content: space-between;
}

.cover .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #cccccc;
  border-radius: 8rpx
}

.cover .wx-swiper-dot-active::before {
  background: #FFFFFF;
}

.swiper {
  position: relative;
}

.Album {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
}

.cover {
  width: 100%;
  height: 469rpx;
  vertical-align: middle;
}

.cover image {
  width: 100%;
}

.Check {
  padding: 20rpx 37rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
}

.bybtn {
  font-size: 30rpx;
  color: #fff;
  width: 137rpx;
  height: 68rpx;
  background-image: linear-gradient(-136deg, #FF8F8B 0%, #FF538B 100%);
  border-radius: 10rpx;
  text-align: center;
  line-height: 68rpx;
  letter-spacing: 4rpx;
}


.discount {
  font-size: 29rpx;
  color: #2A2A2A;
}

.discount text {
  font-size: 29rpx;
  color: #FF538B;
}


.shopAddress {
  box-shadow: 0 -5rpx 10rpx 0 rgba(210, 210, 210, 0.25);
  background-color: #ffffff;
  padding-left: 37rpx;
  padding-right: 37rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #EEEEEE;
}

.address {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #323232;
}


.address image {
  margin-right: 23rpx;
  width: 37rpx;
  height: 37rpx;
}

.distance {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
  margin-left: 58rpx;
}


.businessHours {
  background-color: #ffffff;
  padding: 20rpx 37rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #EEEEEE;
}

.hours {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #323232;
}

.hours image {
  margin-right: 23rpx;
  width: 37rpx;
  height: 37rpx;
}

.week {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
  margin-left: 58rpx;
}



.shopBottom {
  background: #FFFFFF;
  box-shadow: 0 -5rpx 10rpx 0 rgba(210, 210, 210, 0.25);
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
  align-items: center;
}


.JumpHome {
  width: 23%;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.JumpHome view {
  margin-top: 10rpx;
}

.JumpHome image {
  width: 37rpx;
  height: 37rpx;
}


.NavigateShop {
  background: #04D3AF;
  width: 34%;
  font-size: 26rpx;
  color: #FFFFFF;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
}

.NavigateShop image {
  width: 37rpx;
  height: 37rpx;
  margin-right: 17rpx;
  margin-top: -5rpx;
}


.shopKnowledge {
  background-color: #ffffff;
  padding: 35rpx 37rpx;
  margin-bottom: 110rpx;
}


.shopTitle {
  display: flex;
  align-items: center;
  font-size: 37rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.shopTitle view:first-child {
  background: #04D3AF;
  border-radius: 4px;
  width: 6rpx;
  height: 28rpx;
  margin-right: 17rpx;
}

.shopLabel {
  background: #F1F1F1;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666666;
  display: inline-block;
  margin-right: 18rpx;
  height: 50rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  margin-bottom: 10rpx;
}

.intro {
  margin-top: 45rpx;
  font-size: 29rpx;
  color: #666666;
  position: relative;
}

.template {}


.hide {
  margin-bottom: 16rpx;
  height: 600rpx;
  overflow: hidden;
}

.understandMore {
  display: flex;
  align-items: center;
}

.line {
  background-color: #EEEEEE;
  width: 235rpx;
  height: 1px;
  margin-right: 20rpx;
}

.moreText {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
  margin-right: 20rpx;
}

.moreText image {
  margin-left: 7rpx;
  width: 24rpx;
  height: 13rpx;
}