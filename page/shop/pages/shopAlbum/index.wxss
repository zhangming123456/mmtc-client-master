.shopAlbum {
    padding: 30rpx;
    box-sizing: border-box;
}


.albumBox:nth-child(1) {
    margin-right: 30rpx;
}

.albumBox:nth-child(3) {
    margin-right: 30rpx;
}

.albumBox {
    display: inline-block;
    width: 326rpx;
    height: 326rpx;
    background: #F5F5F5;
    border-radius: 4rpx;
    text-align: center;
    position: relative;
    margin-bottom: 30rpx;
}

.albumBox image{
    width: 100%;
    height: 100%;
}

.albumText {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60rpx;
    opacity: 0.5;
    background: #323232;
    border-radius: 4rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    justify-content: center;
    display: flex;
    align-items: center;
}