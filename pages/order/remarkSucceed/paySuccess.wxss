.avatar {
    width: 140rpx;
    height: 140rpx;
    margin-bottom: 30rpx;
}

.paySuccess {
    position: relative;
}

.image {
    width: 100%;
    height: 617rpx;
}

.success {
    position: absolute;
    bottom: 0;
    top: 60rpx;
    left: 0;
    right: 0;
}

.successText {
    font-size: 36rpx;
    color: #FFFFFF;
}

.success image {
    width: 118rpx;
    height: 118rpx;
}

.successButton {
    display: flex;
    margin-top: 64rpx;
    justify-content: center;
}

.successButton view {
    width: 260rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
}

.successButton view:first-child {
    border: 1px solid #FFFFFF;
    border-radius: 8rpx;
    color: #FFFFFF;
    font-size: 32rpx;
    margin-right: 30rpx;
}


.successButton view:last-child {
    background: #FFFFFF;
    border-radius: 8rpx;
    font-size: 32rpx;
    color: #04D3AF;
}