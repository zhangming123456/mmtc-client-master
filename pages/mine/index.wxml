<view class="user-hold">
    <button open-type="getUserInfo" hover-class="none" bindgetuserinfo="bindGetUserInfo"
            class='azm-userInfo_box'>
        <view class="flexBox">
            <view class="flexBox-item fb-6">
                <image src="{{userInfo.avatarUrl||'https://app.mmtcapp.com/mmtc/imgs/default.png'}}"
                       class='avatar'></image>
            </view>
            <view class='flexBox-item fb-18 user-info flex-con'>
                <view class='nickname'>您好</view>
                <view class='nologin'>
                    <block wx:if="{{isLogin}}">
                        <text>{{userInfo.nickName}}</text>
                    </block>
                    <block wx:else>
                        <text>暂未登录</text>
                    </block>
                </view>
            </view>
        </view>
    </button>
    <block wx:if="{{isLogin}}">
        <view class="exit-btn" catchtap="logoff">退出账号</view>
    </block>
</view>
<view class="panel-no-margin bg-white border-t mt24 border-b">
    <view class="flex">
        <view class="fz32 text282828 flex-con">
            <span class="line-blue"></span> 我的消息
        </view>

        <!-- <image class="icon-next" src='https://app.mmtcapp.com/mmtc/imgs/gt2@2x.png'></image> -->
    </view>
</view>
<view class="border-b mini-bar bg-white">
    <view class="text-center flex clearfix">
        <view class="flex-con bar-item" data-type="0" bindtap='showTypeBill'>
            <image src="https://app.mmtcapp.com/mmtc/imgs/zan2@2x.png" alt="" style='width:39rpx;height:39rpx;'></image>
            <view class="fz28 text666">赞</view>
        </view>
        <view class="flex-con bar-item" data-type="1" bindtap='showTypeBill'>
            <image src="https://app.mmtcapp.com/mmtc/imgs/comments@2x.png" alt=""
                   style='width:39rpx;height:36rpx;'></image>
            <view class="fz28 text666">评论</view>
        </view>
        <view class="flex-con bar-item" data-type="2" bindtap='showTypeBill'>
            <image src="https://app.mmtcapp.com/mmtc/imgs/notice@2x.png" style='width:32rpx;height:40rpx;'></image>
            <view class="fz28 text666">通知</view>
        </view>
    </view>
</view>


