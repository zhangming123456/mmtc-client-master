}

.pin-price {
  color: #ff538b;
  display: inline;
}

.orgin-price {
  color: #999;
  margin-left: 16rpx;
  display: inline;
  text-decoration: line-through;
}

.item-text {
  font-size: 28rpx;
  color: #999;
  display: inline;
  vertical-align:middle;
  margin-left:21rpx;
}

.item-text-num {
  display: inline;
  color: #ff538b;
}


.item-cover-wrap {
  width: 188rpx;
