}

.shop-avatar{
  width: 36rpx;
	height: 32rpx;
  margin-right:14rpx;
  vertical-align: middle;
}


.item-info {
  padding-left: 30rpx;
  position: relative;
}

.item-title {
  font-size: 30rpx;
  color: #282828;
