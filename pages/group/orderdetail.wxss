.toptip {
  padding-left: 30rpx;
  padding-top: 37rpx;
  padding-bottom: 37rpx;
  background-image: linear-gradient(90deg, #e00049 0%, #e8667f 100%),
                      linear-gradient(#ff538b, #ff538b);
  background-blend-mode: normal, normal;
  color: #fff;
}

.toptip-title {
  font-size: 32rpx;
  padding-bottom: 17rpx;
}

.toptip-desc {
  font-size: 24rpx;
}

.clock-img {
  width: 78rpx;
  height: 78rpx;
  margin-right: 21rpx;
}

page {
