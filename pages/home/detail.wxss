.p1 {
  padding: 30rpx 22rpx;
  background-color: #fff;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
}

.item-info {
  padding-left: 22rpx;
}

.title {
  font-size: 36rpx;
  font-weight: normal;
  font-stretch: normal;
  color: #282828;
  padding-bottom: 26rpx;
}

.addr {
  font-size: 24rpx;
  line-height: 32rpx;
  color: #666;
}

page {
  background-color: #f4f4f4;
}

.p2 {
  height: 64rpx;
  background-color: #f4f4f4;
  border-top: solid 1rpx #dedede;
  border-bottom: solid 1rpx #dedede;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #666;
  padding-top: 20rpx;
  padding-left: 22rpx;
  box-sizing: border-box;
}

.p3 {
  background-color: #fff;
  padding: 30rpx 23rpx 65rpx 23rpx;
}

.content {
  font-size: 26rpx;
  line-height: 1.8em;
  color: #666;
}

.tags {
  margin-right: -33rpx;
  margin-bottom: 4rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.tag {
  height: 58rpx;
  line-height: 58rpx;
  padding: 0 41rpx;
  background-color: rgba(210, 247, 243, 0.5);
  border-radius: 28rpx;
  margin-bottom: 20rpx;
  margin-right: 33rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #13ccba;
}

.tag:nth-child(5n-4) {
  background-color: rgba(210, 247, 243, 0.5);
  color: #13ccba;
}

.tag:nth-child(5n-3) {
  background-color: rgba(254, 190, 202, 0.3);
  color: #fd7e96;
}

.tag:nth-child(5n-2) {
  background-color: rgba(193, 136, 254, 0.2);
  color: #c188fe;
}

.tag:nth-child(5n-1) {
  background-color: rgba(111, 184, 251, 0.2);
  color: #5da7ec;
}

.tag:nth-child(5n) {
  background-color: rgba(242, 177, 126, 0.2);
  color: #e3a370;
}

.gt {
  padding-top: 50rpx;
}

.gt image {
  width: 15rpx;
  height: 25rpx;
}

.gt image.s-qrcode {
  width: 30rpx;
  height: 32rpx;
  margin-right: 18rpx;
}

.qrcode-txt {
  color: #ff538b;
  font-size: 30rpx;
  text-align: center;
  padding-bottom: 47rpx;
}

.qrcode-masker {
  background-color: rgba(0, 0, 0, 0.2);
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 1;
  display: table;
  width: 100%;
  height: 100%;
}

.qrcode-masker-inner {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.qrcode-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 28rpx;
}

.qrcode {
  width: 624rpx;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: left;
  display: inline-block;
}

.qrcode-title {
  padding: 38rpx 36rpx 0 36rpx;
}

.qrcode-img {
  width: 440rpx;
  height: 440rpx;
}

.qrcode-wrap {
  text-align: center;
  padding-bottom: 65rpx;
  padding-top: 68rpx;
}
