.user-hold {
  position: relative;
}
.user-hold > view.exit-btn {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 130rpx;
  height: 43rpx;
  line-height: 43rpx;
  border: solid 1rpx #999;
  border-radius: 21rpx;
  font-size: 24rpx;
  text-align: center;
  color: #999;
  margin-right: 10rpx;
}
.user-hold button.azm-userInfo_box::after {
  border: 0;
}
.user-hold button.azm-userInfo_box::before {
  border: 0;
}
.user-hold .azm-userInfo_box {
  display: block;
  background-color: transparent;
  width: 100%;
  margin: 0;
  padding: 0;
  padding-left: 0;
  padding-right: 0;
  box-sizing: content-box;
  text-align: left;
  text-decoration: none;
  line-height: 1;
  border-radius: 0;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: inherit;
  border: none;
}
.user-hold .azm-userInfo_box .nickname {
  font-size: 25rpx;
  color: #000;
  margin-top: 27rpx;
}
.user-hold .azm-userInfo_box .nologin {
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 36rpx;
  letter-spacing: 0px;
  padding-top: 22rpx;
  color: #999;
}
button.azm-cell__btn {
  text-align: left;
  border: none;
  line-height: 1;
  border-radius: 0;
  padding: 0;
}
