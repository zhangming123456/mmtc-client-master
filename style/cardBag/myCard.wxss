page {
  background-color: #f4f4f4;
}
view {
  line-height: normal;
}
.t-card {
  border-radius: 40rpx;
  width: 690rpx;
  height: 353rpx;
  margin: 30rpx;
  padding: 30rpx 30rpx 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.t-valid {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 169rpx;
  height: 163rpx;
}
.t-cardTitle {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.t-cardTitle > image {
  width: 40rpx;
  height: 40rpx;
}
.t-cardId {
  font-size: 26rpx;
  color: #FFFFFF;
  margin-top: 5rpx;
}
.t-cardTime {
  float: right;
  font-size: 24rpx;
  color: #FFFFFF;
  margin-top: 90rpx;
}
.t-shopName {
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #FFFFFF;
}
.t-shopName > image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  margin-left: 30rpx;
}
.t-bottom {
  width: 100%;
  background: #FFFFFF;
  position: fixed;
  bottom: 0;
  height: 90rpx;
  border-top: 1px solid #E5E5E5;
  font-size: 28rpx;
  color: #4A4A4A;
  line-height: 90rpx;
  text-align: center;
  display: flex;
}
